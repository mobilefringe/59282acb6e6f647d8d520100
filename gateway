<div class="page_header">   
    <div class="site_container">
        <div class="header_content">
            <div class="row">
                <div class="col-md-12">
                    <hr>
                    <h1>The Gateway</h1></h1>
                    <hr>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="site_container page_content">
    <div class="row">
        <div class="col-md-12">
            <h3 class="details_header caps">The Gateway</h3>
            <div class="thick_line"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div id="mm_page_content"></div>    
        </div>
    </div>
</div>
<script>
$(document).ready(function(e){
    init(e);
    function renderAll(){
        var repo = getRepoDetailsByName("Gateway Banner");
        if (repo != undefined) {
            var banner = getImageURL(repo.images[0].photo_url);
            $(".page_header").css({backgroundImage: "url(" + banner + ")"});
        }
        
        var prefix = get_prefix();
        var pages_json = prefix + "/pages/thegateway-the-gateway.json"
        $.getJSON(pages_json).done(function(data) {
            $('#mm_page_content').html(data.body);
        }).fail(function(jqXHR) {
            if (jqXHR.status == 404) {
                $("#404_msg").fadeIn("fast");
            }
        });
        
        show_content();
    }
    loadMallDataCached(renderAll); 
});
</script>