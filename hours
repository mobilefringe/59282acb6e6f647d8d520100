    <div class="site_container">
        <div class="header_content">
            <div class="row">
                <div class="col-md-12">
                    <hr>
                    <h1>The Gateway Hours</h1>
                    <hr>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="site_container">
    <div class="row">
        <div class="col-md-12">
            <h3 class="details_header caps">The Gateway Hours</h3>
            <div class="thick_line"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <div id="reg_hours_container">
                <script id="reg_hours_template" type="x-tmpl-mustache/text">
                    <div class="hours_div">
                        <div class="hours_day">{{day}}:</div>
                        <div class="hours_time">{{h}}</div>
                    </div>
                </script>
            </div>
            <div class="margin_30"></div>
        </div>
        <div class="col-sm-8">
            <div id="mm_page_content"></div> 
        </div>
    </div>
</div>
<script>
$(document).ready(function(e){
    init(e);
    function renderAll(){
        var repo = getRepoDetailsByName("Hours Banner");
        if (repo != undefined) {
            var banner = getImageURL(repo.images[0].photo_url);
            $(".page_header").css({backgroundImage: "url(" + banner + ")"});
        }
        
        var hours = getPropertyHours();
        renderHours('#reg_hours_container','#reg_hours_template', hours, 'reg_hours');
        renderHours('#holiday_hours_container','#holiday_hours_template', hours, 'holiday_hours');
        
        var prefix = get_prefix();
        var pages_json = prefix + "/pages/thegateway-hours.json"
        $.getJSON(pages_json).done(function(data) {
            $('#mm_page_content').html(data.body);
        }).fail(function(jqXHR) {
            if (jqXHR.status == 404) {
                $("#404_msg").fadeIn("fast");
            }
        });
        
        show_content();
    }
    loadMallDataCached(renderAll); 
})
</script>