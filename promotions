            <div class="black_divider"></div> 
            <p class="center">There are currently no promotions available, please check back again later.</p>
            <div class="black_divider"></div> 
        </div>
    </div>
    <div class="row">
        <div id="promos_container">
            <script id="promos_template" type="x-tmpl-mustache/text">
                <div class="col-xs-6 col-sm-3 col-md-2">
                    <div class="ih-item circle effect19">
                        <a href="/promotions/{{slug}}">
                            <img src="{{image_url}}" alt="img">
                            <div class="info">
                                <div class="content">
                                    <h3>{{name_short}}</h3>
                                    <h5>{{dates}}</h5>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </script>
        </div>
    </div>
    <div class="margin_60"></div>
