<div class="site_container page_content">
    <div class="row">
        <div class="col-md-12">


            <div class="margin_20"></div>
            <h3 class="hours_header">Events Calendar</h3>
            <div class="position_relative">
                <ul class="event_calendar_header">
                    <li><span id="closed_event_tile"></span>Closed</li>
                    <li><span id="private_event_tile"></span>Private Events</li>
                    <li><span id="public_event_tile"></span>Public Events</li>
                    <li><span id="dixie_event_tile"></span>Dixie Events</li>
                </ul>
                <div class="calendar" id="calendar"></div>
                <div class="margin_60"></div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var repo = getRepoDetailsByName("Events Banner");
            if (repo != undefined) {
                var banner = getImageURL(repo.images[0].photo_url);
                $(".page_header").css({backgroundImage: "url(" + banner + ")"});
            }
            
            var calendar_events = [];
            var events = getEventsList().sortBy(function(o){ return o.start_date });
            console.log(events);
            $.each( events , function( key, val ){
                var published_event = {};
                today = moment();
                five_months = moment().add('4', 'M').endOf("d");
                if (today < five_months){
                    webDate = moment(val.show_on_web_date);
                    if (today.tz(getPropertyTimeZone()) >= webDate.tz(getPropertyTimeZone())) {
                        if(val.tags.indexOf("discovery") >= 0){
                            published_event.start = val.start_date;
                            published_event.end = val.end_date;
                            // published_event.title = val.name;
                            published_event.color = (val.tags.indexOf("#public_event") >= 0 ) ? "#E56717" : "#FBB917";
                            published_event.url = "/events/" + val.slug;
                            calendar_events.push(published_event);
                        } else if(val.tags.indexOf("#private_event") >= 0  || val.tags.indexOf("#closed") >= 0 ){
                            published_event.start = val.start_date;
                            published_event.end = val.end_date;
                            // published_event.title = "Private Event";
                            published_event.color =  (val.tags.indexOf("#private_event") >= 0 ) ? "#E77471" : "#347235";
                            // published_event.url = "/events/" + val.slug;
                            calendar_events.push(published_event);
                        }
                    }
                }
            });
    
            show_content();
            
            $('#calendar').fullCalendar({
                header: {
                    right:  'prev,next'
                },
                timezone: getPropertyTimeZone(),
                events: calendar_events,
                buttonText: {
                    prev: "Previous Month",
                    next: "Next Month"
                },
                viewRender: function(view,element) {
                    var now = new Date();
                    var end = new Date();
                    end.setMonth(now.getMonth() + 3); //Adjust as needed
        
                    if ( end < view.end) {
                        $("#calendar .fc-next-button").addClass("fc-state-disabled");
                        return false;
                    }
                    else {
                        $("#calendar .fc-next-button").removeClass("fc-state-disabled");
                    }
                }
            });
        }
        loadMallDataCached(renderAll); 
    });
</script>