        			zoom_BUTTONS_SHOW : 'YES',
        			pan_BUTTONS_SHOW : 'NO',
        			pan_LIMIT_BOUNDARY : 'NO',
        			button_SIZE: 34,
        			button_ALIGN: "top right",
        			zoom_OUT_TO_FIT: "NO",
        			container: 'zoom_container'
        		});
        	show_png_pin(".mapper", "#map_image");
        	
            show_content();
        }
        loadMallDataCached(renderAll); 
    });
</script>