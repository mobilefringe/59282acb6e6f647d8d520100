<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var stores = getStoresList();
            renderStoreList('#stores_container','#stores_template', stores, "A", "Z");
            
            // $("#map_image").attr("src", getPNGMapURL())
        		$('#map_image').smoothZoom({
        		    width: 754,
                    height: 500,
        		    initial_ZOOM: 0,
