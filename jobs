<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            // var repo = getRepoDetailsByName("Jobs Banner").images[0];
            // var banner = getImageURL(repo.photo_url)
            // $(".page_header").css({backgroundImage: "url(" + banner + ")"});
            
            var jobs = getJobsList().sortBy(function(o){ return o.name});
            console.log(jobs);
            var published_jobs = [];
            $.each(jobs , function( key, val ){
                today = moment();
                webDate = moment(val.show_on_web_date)
                if (today.tz(getPropertyTimeZone()) >= webDate.tz(getPropertyTimeZone())) {
                    published_jobs.push(val);
                } 
            });
            if(published_jobs.length > 0){
                renderJobs('#jobs_container', '#jobs_template', published_jobs);
            }
            else{
                $('#no_jobs').show()
            }
            
            show_content();
        }
        loadMallDataCached(renderAll); 
    });
</script>