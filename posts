<script>
$(document).ready(function(e){
    init(e);
    
    function renderAll(){
        var repo = getRepoDetailsByName("Blog Banner");
        if (repo != undefined) {
            var banner = getImageURL(repo.images[0].photo_url);
            $(".page_header").css({backgroundImage: "url(" + banner + ")"});
        }
            
        var blog_posts = getBlogDataBySlug("thegateway-blog").posts;
        var sorted_posts = blog_posts.sortBy(function(o){ return o.publish_date }).reverse();
        var main_post = sorted_posts[0];
        renderSinglePost('#main_post_container', "#main_post_template", main_post);

        var posts = sorted_posts.splice(1);
        renderPosts('#posts_container', '#posts_template', posts);
        
        show_content();
        
        load_more(1);
            
        $('#load_more_posts').click(function(e){
            var i = $('#num_loaded').val();
            load_more(i);
            e.preventDefault();
        });
    }

    loadMallDataCached(renderAll);
});
</script>