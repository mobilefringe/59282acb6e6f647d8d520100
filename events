<div class="site_container">
    <div class="row">
        <div class="col-md-12">
            <h3 id="no_events" class="hidden_now">There are currently no events available, please check back again later.</h3>
        </div>
    </div>
</div>
<div class="wide_container">
    <div class="row">
        <div id="events_container">
            <script id="events_template" type="x-tmpl-mustache/text">
                <div class="col-xs-6 col-sm-3">
                    <div class="ih-item circle effect19">
                        <a href="/events/{{slug}}">
                            <img src="{{image_url}}" alt="img">
                            <div class="info">
                                <h2>{{name_short}}</h2>
                                <hr>
                                <h3>{{dates}}</h3>
                            </div>
                        </a>
                    </div>
                </div>
            </script>
        </div>
    </div>
</div>
<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var repo = getRepoDetailsByName("Events Banner").images[0];
            var banner = getImageURL(repo.photo_url)
            $(".page_header").css({backgroundImage: "url(" + banner + ")"});
            
            var events = getEventsList().sortBy(function(o){ return o.start_date });
            var published_events = [];
            $.each( events , function( key, val ){
                today = moment();
                webDate = moment(val.show_on_web_date)
                if (today.tz(getPropertyTimeZone()) >= webDate.tz(getPropertyTimeZone())) {
                    published_events.push(val);
                } 
            });
            if(published_events.length > 0){
                renderEvents("#events_container","#events_template", published_events);
            }
            else{
                $('#no_events').show();
            }

            show_content();
        }
        loadMallDataCached(renderAll); 
    });
</script>