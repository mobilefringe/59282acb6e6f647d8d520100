<script>
    var sliceStart;
    var sliceEnd;
    var counter = 0;
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var repo = getRepoDetailsByName("Events Banner");
            if (repo != undefined) {
                try {
                    var banner = getImageURL(repo.images[0].photo_url);
                    $(".page_header").css({backgroundImage: "url(" + banner + ")"});    
                } catch(err) {
                    console.log(err);
                }
            }
            
            var today = moment().tz(getPropertyTimeZone());
            var three_months = moment().add('3', 'M').endOf("d").format();
            var filteredEvents = _.filter(getEventsList(), function(o) { 
                var webDate = moment(o.show_on_web_date).tz(getPropertyTimeZone());
                
                o.start = o.start_date;
                o.end = o.end_date;
                o.title = o.name;
                o.url = "/events/" + o.slug;
                
                
                o.store_name = "The Gateway";
                o.image_url = "https://mallmaverick.cdn.speedyrails.net" + o.event_image_url;
                o.logo  = "//codecloud.cdn.speedyrails.net/sites/5a57a7d06e6f6428f0080000/image/jpeg/1513719653000/default_tmb.jpg";
                if(o.image_url.indexOf('missing.png') > 0){
                    o.image_url  = o.logo;
                }
                
                if (o.name.length > 30){
                    o.name_short = o.name.substring(0,30) + "...";
                } else {
                    o.name_short = o.name;
                }
                
                if (o.description.length > 200){
                    o.desc_short = o.description.substring(0, 199) + "...";
                } else {
                    o.desc_short = o.description;
                }
                
                var show_date = moment(o.show_on_web_date);
                var start = moment(o.start_date).tz(getPropertyTimeZone());
                var end = moment(o.end_date).tz(getPropertyTimeZone());
                if (start.format("DMY") == end.format("DMY")){
                    o.dates = start.format("dddd, MMMM Do, YYYY")
                    o.day = start.format("ddd")
                    o.num = start.format("D")
                    o.month = start.format("MMM")
                    o.show_date = "display: none;"
                } else {
                    o.dates = start.format("dddd, MMMM Do, YYYY") + " to " + end.format("dddd, MMMM Do, YYYY")
                    o.day = start.format("ddd")
                    o.num = start.format("D")
                    o.month = start.format("MMM")
                }
                
                return o.end_date <= three_months && today >= webDate
            });
            
            filteredEvents = _.orderBy(filteredEvents, function(o) { return o.start_date });
            
            
            // CALENDAR 
            // $.map( filteredEvents, function( val, i ) {
            //     //Calendar View
            //     val.start = val.start_date;
            //     val.end = val.end_date;
            //     val.title = val.name;
            //     val.url = "/events/" + val.slug;
                
            //     // LIST VIEW
            //     val.store_name = "The Gateway";
            //     val.image_url = val.event_image_url_abs;
            //     val.logo  = "//codecloud.cdn.speedyrails.net/sites/5a57a7d06e6f6428f0080000/image/jpeg/1513719653000/default_tmb.jpg";
            //     if(val.image_url.indexOf('missing.png') > 0){
            //         val.image_url  = val.logo;
            //     }
                
            //     if (val.name.length > 30){
            //         val.name_short = val.name.substring(0,30) + "...";
            //     } else {
            //         val.name_short = val.name;
            //     }
                
            //     if (val.description.length > 200){
            //         val.desc_short = val.description.substring(0, 199) + "...";
            //     } else {
            //         val.desc_short = val.description;
            //     }
                
            //     var show_date = moment(val.show_on_web_date);
            //     var start = moment(val.start_date).tz(getPropertyTimeZone());
            //     var end = moment(val.end_date).tz(getPropertyTimeZone());
            //     if (start.format("DMY") == end.format("DMY")){
            //         val.dates = start.format("dddd, MMMM Do, YYYY")
            //         val.day = start.format("ddd")
            //         val.num = start.format("D")
            //         val.month = start.format("MMM")
            //         val.show_date = "display: none;"
            //     } else {
            //         val.dates = start.format("dddd, MMMM Do, YYYY") + " to " + end.format("dddd, MMMM Do, YYYY")
            //         val.day = start.format("ddd")
            //         val.num = start.format("D")
            //         val.month = start.format("MMM")
            //     }
            // });
            
            // LIST VIEW
            sliceStart = 0;
            sliceEnd = 3;
            if(filteredEvents.length > 0){
                var eventsToShow = filteredEvents.slice(sliceStart, sliceEnd)
                //renderEvents("#events_subcontainer","#events_template", eventsToShow);
            } else {
                $('#no_events').show();
                $('#loadMoreEvents').hide();
            }
            
            show_content();
            
            $('#load_more_posts').click(function(e){
                load_more(filteredEvents, sliceStart, sliceEnd);
                e.preventDefault();
            });
            
            $('#eventsCalendar').fadeIn();
            
            $('#listBtn').click(function(){
                $('#listBtn').hide();
                $('#calendarBtn').show(); 
                $('#eventsCalendar').fadeOut();
                $('#eventsList').fadeIn();
            });
            
            $('#calendarBtn').click(function() {
                $('#calendarBtn').hide();
                $('#listBtn').show();
                $('#eventsList').fadeOut();
                $('#eventsCalendar').fadeIn();
            });
            
            $('#calendar').fullCalendar({
                header: {
                    right:  'prev,next'
                },
                timezone: getPropertyTimeZone(),
                events: filteredEvents,
                buttonText: {
                    prev: "Previous Month",
                    next: "Next Month"
                },
                viewRender: function(view,element) {
                    var now = new Date();
                    var end = new Date();
                    end.setMonth(now.getMonth() + 3); //Adjust as needed
        
                    if ( end < view.end) {
                        $("#calendar .fc-next-button").addClass("fc-state-disabled");
                        return false;
                    }
                    else {
                        $("#calendar .fc-next-button").removeClass("fc-state-disabled");
                    }
                }
            });
        }
        
        function load_more(filteredEvents, start, end){
            counter = counter + 1;
            sliceStart = start + 3;
            sliceEnd = end + 3;
            var eventsToShow = filteredEvents.slice(sliceStart, sliceEnd)
            console.log(eventsToShow);
            renderEvents("#events_subcontainer","#events_template", eventsToShow);
            var total_events = eventsToShow.length;
            if(total_events == 0){
                $('#loaded_posts').hide();
                $('#all_loaded').show();
            }
        }

        loadMallDataCached(renderAll); 
    });
</script>