<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var repo = getRepoDetailsByName("Events Banner");
            if (repo != undefined) {
                var banner = getImageURL(repo.images[0].photo_url);
                $(".page_header").css({backgroundImage: "url(" + banner + ")"});
            }
            // CALENDAR 
            var calendar_events = [];
            var events = getEventsList().sortBy(function(o){ return o.start_date });
            $.each( events , function( key, val ){
                var published_event = {};
                today = moment();
                five_months = moment().add('4', 'M').endOf("d");
                if (today < five_months){
                    webDate = moment(val.show_on_web_date);
                    if (today.tz(getPropertyTimeZone()) >= webDate.tz(getPropertyTimeZone())) {
                        // if(val.tags.indexOf("discovery") >= 0){
                        //     published_event.start = val.start_date;
                        //     published_event.end = val.end_date;
                        //     published_event.title = val.name;
                        //     published_event.color = (val.tags.indexOf("discovery") >= 0 ) ? "#FFA400" : "#FFA400";
                        //     published_event.url = "/events/" + val.slug;
                        //     calendar_events.push(published_event);
                        // } else if(val.tags.indexOf("plaza") >= 0){
                        //     published_event.start = val.start_date;
                        //     published_event.end = val.end_date;
                        //     published_event.title = val.name;
                        //     published_event.color = (val.tags.indexOf("plaza") >= 0 ) ? "#007CBA" : "#007CBA";
                        //     published_event.url = "/events/" + val.slug;
                        //     calendar_events.push(published_event);
                        // } else if(val.tags.indexOf("fountain")){
                            published_event.start = val.start_date;
                            published_event.end = val.end_date;
                            published_event.title = val.name;
                            published_event.color =  (val.tags.indexOf("fountain") >= 0 ) ? "#C14F9D" : "#C14F9D";
                            published_event.url = "/events/" + val.slug;
                            calendar_events.push(published_event);
                        // }
                    }
                }
            });
            
            // LIST VIEW
            var events = getEventsList().sortBy(function(o){ return o.start_date });
            var published_events = [];
            $.each( events , function( key, val ){
                today = moment();
                webDate = moment(val.show_on_web_date)
                if (today.tz(getPropertyTimeZone()) >= webDate.tz(getPropertyTimeZone())) {
                    published_events.push(val);
                } 
            });
            if(published_events.length > 0){
                renderEvents("#events_container","#events_template", published_events);
            } else {
                $('#no_events').show();
            }
        
            show_content();
            
            load_more(1);
            
            $('#load_more_posts').click(function(e){
                var i = $('#num_loaded').val();
                load_more(i);
                e.preventDefault();
            });
            
            $('#eventsCalendar').fadeIn();
            
            $('#listBtn').click(function(){
                $('#listBtn').hide();
                $('#calendarBtn').show(); 
                $('#eventsCalendar').fadeOut();
                $('#eventsList').fadeIn();
            });
            
            $('#calendarBtn').click(function() {
                $('#calendarBtn').hide();
                $('#listBtn').show();
                $('#eventsList').fadeOut();
                $('#eventsCalendar').fadeIn();
            });
            
            $('#calendar').fullCalendar({
                header: {
                    right:  'prev,next'
                },
                timezone: getPropertyTimeZone(),
                events: calendar_events,
                buttonText: {
                    prev: "Previous Month",
                    next: "Next Month"
                },
                viewRender: function(view,element) {
                    var now = new Date();
                    var end = new Date();
                    end.setMonth(now.getMonth() + 3); //Adjust as needed
        
                    if ( end < view.end) {
                        $("#calendar .fc-next-button").addClass("fc-state-disabled");
                        return false;
                    }
                    else {
                        $("#calendar .fc-next-button").removeClass("fc-state-disabled");
                    }
                }
            });
        }
        
        function load_more(num){
            var n = parseInt(num);
            for(i = n; i < n + 3; i++){
                var id = i.toString();
                $('#show_' + id ).fadeIn();
            }
            var events = getEventsList().sortBy(function(o){ return o.start_date });
            var total_events = events.length;
            if(i >= total_events){
                $('#loaded_posts').hide();
                $('#all_loaded').show();
            }
            $('#num_loaded').val(i);
        }

        loadMallDataCached(renderAll); 
    });
</script>