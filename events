<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var repo = getRepoDetailsByName("Events Banner");
            if (repo != undefined) {
                try {
                    var banner = getImageURL(repo.images[0].photo_url);
                    $(".page_header").css({backgroundImage: "url(" + banner + ")"});    
                } catch(err) {
                    console.log(err);
                }
            }
            
            var three_months = moment().add('3', 'M').endOf("d").format();
            var filteredEvents = getEventsList().filter(function(o){ return o.end_date <= three_months });
            console.log(filteredEvents)

            var eventsThreeMonths = [];
            $.each( filteredEvents , function( key, val ){
                var today = moment().tz(getPropertyTimeZone());
                var webDate = moment(val.show_on_web_date).tz(getPropertyTimeZone());
                if (today >= webDate){
                    eventsThreeMonths.push(val);
                }
            });
            console.log(eventsThreeMonths)
            // $.each( events , function( key, val ){
            //     var today = moment().tz(getPropertyTimeZone());
            //     var three_months = moment().add('3', 'M').endOf("d");
            //     var webDate = moment(val.show_on_web_date).tz(getPropertyTimeZone());
            //     if (today < three_months && today >= webDate){
            //         var end_Date = moment(val.end_date).tz(getPropertyTimeZone());
            //         if(end_Date <= three_months){
            //             eventsThreeMonths.push(val);
            //         }
            //     }
            // });

            // CALENDAR 
            // var calendar_events = [];
            // $.each( eventsThreeMonths , function( key, val ){
            //     var published_event = {};
            //     published_event.start = val.start_date;
            //     published_event.end = val.end_date;
            //     published_event.title = val.name;
            //     published_event.url = "/events/" + val.slug;
            //     calendar_events.push(published_event);
            // });
            
            // LIST VIEW
            if(eventsThreeMonths.length > 0){
                renderEvents("#events_container","#events_template", eventsThreeMonths);
            } else {
                $('#no_events').show();
                $('#loadMoreEvents').hide();
            }
            
            show_content();
            
            load_more(1);
            
            $('#load_more_posts').click(function(e){
                var i = $('#num_loaded').val();
                load_more(i);
                e.preventDefault();
            });
            
            $('#eventsCalendar').fadeIn();
            
            $('#listBtn').click(function(){
                $('#listBtn').hide();
                $('#calendarBtn').show(); 
                $('#eventsCalendar').fadeOut();
                $('#eventsList').fadeIn();
            });
            
            $('#calendarBtn').click(function() {
                $('#calendarBtn').hide();
                $('#listBtn').show();
                $('#eventsList').fadeOut();
                $('#eventsCalendar').fadeIn();
            });
            
            $('#calendar').fullCalendar({
                header: {
                    right:  'prev,next'
                },
                timezone: getPropertyTimeZone(),
                events: calendar_events,
                buttonText: {
                    prev: "Previous Month",
                    next: "Next Month"
                },
                viewRender: function(view,element) {
                    var now = new Date();
                    var end = new Date();
                    end.setMonth(now.getMonth() + 3); //Adjust as needed
        
                    if ( end < view.end) {
                        $("#calendar .fc-next-button").addClass("fc-state-disabled");
                        return false;
                    }
                    else {
                        $("#calendar .fc-next-button").removeClass("fc-state-disabled");
                    }
                }
            });
        }
        
        function load_more(num){
            var n = parseInt(num);
            for(i = n; i < n + 3; i++){
                var id = i.toString();
                $('#show_' + id ).fadeIn();
            }
            var events = getEventsList().sortBy(function(o){ return o.start_date });
            var total_events = events.length;
            if(i >= total_events){
                $('#loaded_posts').hide();
                $('#all_loaded').show();
            }
            $('#num_loaded').val(i);
        }

        loadMallDataCached(renderAll); 
    });
</script>